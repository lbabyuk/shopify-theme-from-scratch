{% comment %}
  Logo snippet
  Usage:
    {% render 'logo' %}
{% endcomment %}
 
<a href="{{ routes.root_url }}" aria-label="Logo">
  {%- assign logo_alt = shop.name | escape -%}
  {%- assign logo_widths_array = '100,150,200' | split: ',' -%}
  <img
    src="{{ 'logo.png' | asset_url }}"
    alt="{{ logo_alt }}"
    class="logo"
    loading="lazy"
    width="100"
    height="24"
    srcset="{% for w in logo_widths_array %}{{ 'logo.png' | asset_url }} {{ w }}w{% unless forloop.last %}, {% endunless %}{% endfor %}"
    sizes="(max-width: 600px) 50vw, 100px"
  >
</a>
