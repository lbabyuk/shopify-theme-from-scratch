<footer class="footer" role="contentinfo">
  <div class="container footer-container">
    <small
      >&copy; {{ 'footer.copyright' | t }}
      {{- shop.name | escape -}}
    </small>
    <nav aria-label="{{ 'a11y.footer_nav' | t }}" class="footer-nav">
      <ul class="footer-list">
        <li class="footer-list-item">
          <a class="footer-link" href="{{ routes.account_login_url }}" aria-label="Login">{{ 'footer.login' | t }}</a>
        </li>
        <li class="footer-list-item">
          <a class="footer-link" href="{{ routes.search_url }}" aria-label="Search">{{ 'footer.search' | t }}</a>
        </li>
        <li class="footer-list-item">
          <a class="footer-link" href="#" aria-label="Terms of Use">{{ 'footer.terms_of_use' | t }}</a>
        </li>
        <li class="footer-list-item">
          <a class="footer-link" href="#" aria-label="Privacy & Cookie Policy">{{ 'footer.privacy_policy' | t }}</a>
        </li>
      </ul>
    </nav>
  </div>
</footer>
